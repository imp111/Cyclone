                            <StackLayout Orientation="Horizontal" HorizontalOptions="Center" Spacing="0.5" VerticalOptions="CenterAndExpand">
                                <Label x:Name="secondDayTemperature" Text="" TextColor="White" FontSize="35" ></Label>
                                <Label x:Name="secondDayTemperatureUnit"  Text="" TextColor="White" FontSize="35" ></Label>
                            </StackLayout>
                        </StackLayout>
                    </Grid>

                    <Grid BackgroundColor="#2196F3" Opacity="0.85" Grid.Row="2" Grid.Column="0">
                        <StackLayout Orientation="Horizontal" HorizontalOptions="CenterAndExpand" VerticalOptions="CenterAndExpand">
                            <StackLayout Orientation="Vertical" VerticalOptions="CenterAndExpand">
                                <Label x:Name ="thirdDay" Text="" TextColor="White" FontSize="30" HorizontalOptions="CenterAndExpand" />
                                <Label x:Name="thirdDayDate" Margin="0, -5, 0, 0" Text="" TextColor="White" FontSize="20" HorizontalOptions="CenterAndExpand" />
                            </StackLayout>
                            <Image x:Name="thirdDayImg" Source="" Margin="0.20" WidthRequest="130" HeightRequest="100" />
