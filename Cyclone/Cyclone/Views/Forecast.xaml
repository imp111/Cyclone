             x:Class="Cyclone.Views.Forecast"
             Title="Forecast">

    <ContentPage.Content>

        <StackLayout>
            <ScrollView>
                <Grid BackgroundColor="#2196F3" ColumnDefinitions="*" RowDefinitions="*, *, *, *, *, *, *, *, *, *, *">
                    
                    <Grid BackgroundColor="#2196F3" Opacity="0.95" Grid.Row="0" Grid.Column="0">
                        <StackLayout Orientation="Horizontal" HorizontalOptions="CenterAndExpand" VerticalOptions="CenterAndExpand">
                            <StackLayout Orientation="Vertical" VerticalOptions="CenterAndExpand">
                                <Label x:Name ="firstDay" Text="" TextColor="White" FontSize="30" HorizontalOptions="CenterAndExpand" />
                                <Label x:Name="firstDayDate" Margin="0, -5, 0, 0" Text="" TextColor="White" FontSize="20" HorizontalOptions="CenterAndExpand" />
                            </StackLayout>
                            <Image x:Name="firstDayImg" Source="" Margin="0.20" WidthRequest="130" HeightRequest="100" />
                            <StackLayout Orientation="Horizontal" HorizontalOptions="Center" Spacing="0.5" VerticalOptions="CenterAndExpand">
                                <Label x:Name="firstDayTemperature" Text="" TextColor="White" FontSize="35" ></Label>
                                <Label x:Name="firstDayTemperatureUnit"  Text="" TextColor="White" FontSize="35" ></Label>
                            </StackLayout>
                        </StackLayout>
                    </Grid>

                    <Grid BackgroundColor="#2196F3" Opacity="0.9" Grid.Row="1" Grid.Column="0">
                        <StackLayout Orientation="Horizontal" HorizontalOptions="CenterAndExpand" VerticalOptions="CenterAndExpand">
                            <StackLayout Orientation="Vertical" VerticalOptions="CenterAndExpand">
                                <Label x:Name ="secondDay" Text="" TextColor="White" FontSize="30" HorizontalOptions="CenterAndExpand" />
