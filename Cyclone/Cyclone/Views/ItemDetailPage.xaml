<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Cyclone.Views.ItemDetailPage"
             Title="{Binding Title}">

    <StackLayout Spacing="20" Padding="15">
        <Label Text="City name:" FontSize="Medium" />
        <Label Text="{Binding Text}" FontSize="Medium" />
        <Label Text="Unit:" FontSize="Medium" />
        <Label Text="{Binding Unit}" FontSize="Small" />
        <Button Text="Select" Command="{Binding SelectItemCommand} " />
    </StackLayout>
</ContentPage>